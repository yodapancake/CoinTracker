<Page x:ConnectionId='1'
    x:Class="BitcoinPriceTracker.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BitcoinPriceTracker"
    xmlns:data="using:BitcoinPriceTracker.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.Resources>
        <Style TargetType="TextBlock" x:Key="White_textblock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="40"/>
            <Setter Property="FontFamily" Value="Helvetica"/>
        </Style>
        <Style TargetType="TextBlock" x:Key="Black_textblock">
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontSize" Value="40"/>
            <Setter Property="FontFamily" Value="Helvetica"/>
        </Style>
    </Page.Resources>
    <Grid>
        <Image x:ConnectionId='2' x:Name="BackgroundImage" Source="Assets/background space.jpg" Stretch="UniformToFill"/>
        <ScrollViewer IsEnabled="True"/>
        <ListView x:ConnectionId='3' Name="MyListview"                                           HorizontalAlignment="Center"                                ScrollViewer.HorizontalScrollBarVisibility="Visible">
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
            <ListView.ItemTemplate>
                <DataTemplate                                  >
                    <StackPanel x:ConnectionId='4' Margin="20,20,20,20" HorizontalAlignment="Stretch" Orientation="Vertical">
                        <Image x:ConnectionId='5' x:Name="ResultImage"                                                                                                                      HorizontalAlignment="Center"/>
                        <RelativePanel HorizontalAlignment="Center">
                            <Button x:ConnectionId='8' Name="Flyout_menu_button"                                  Width="50" Height="50" FontFamily="Segoe MDL2 Assets" Content="&#xE70D;" Background="White">
                                <Button.Flyout>
                                    <Flyout Placement="Bottom">
                                        <StackPanel Orientation="Vertical">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="24 Hour Change: %" Style="{StaticResource Black_textblock}"/>
                                                <TextBlock x:ConnectionId='13' Name="24hourChangeTextblock"                                      Style="{StaticResource Black_textblock}"/>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="24 Hour Volume: $" Style="{StaticResource Black_textblock}"/>
                                                <TextBlock x:ConnectionId='12' Name="24hourVolumeTextblock"                                    Style="{StaticResource Black_textblock}"/>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="Market Cap: " Style="{StaticResource Black_textblock}"/>
                                                <TextBlock x:ConnectionId='11' Name="CoinSupplyTextblock"                                 Style="{StaticResource Black_textblock}"/>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="Coin Supply:" Style="{StaticResource Black_textblock}"/>
                                                <TextBlock x:ConnectionId='10'                                  Style="{StaticResource Black_textblock}"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Flyout>
                                </Button.Flyout>
                            </Button>
                            <TextBlock x:ConnectionId='9' x:Name="currency" Margin="20,0,0,0" 
                                                                              
                                       Style="{StaticResource White_textblock}" 
                                       HorizontalAlignment="Center"
                                       RelativePanel.AlignVerticalCenterWith="Flyout_menu_button"
                                       RelativePanel.RightOf="Flyout_menu_button"/>
                        </RelativePanel>
                        <TextBlock x:ConnectionId='6' x:Name="coin"                                               Style="{StaticResource White_textblock}" HorizontalAlignment="Center"/>
                        <TextBlock x:ConnectionId='7' x:Name="price"                                             Style="{StaticResource White_textblock}" HorizontalAlignment="Center"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>

